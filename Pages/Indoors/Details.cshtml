@page "{id}"
@model IndoorBookingSystem.Pages.Indoors.DetailsModel
@{
    ViewData["Title"] = Model.Indoor.Name;
}

<style>
    body {
        background: #f8f9fa;
    }

    .hero-section {
        position: relative;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        padding: 60px 0 40px;
        margin-bottom: 40px;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="rgba(255,255,255,0.1)" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,122.7C672,117,768,139,864,138.7C960,139,1056,117,1152,106.7C1248,96,1344,96,1392,96L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') no-repeat bottom;
        background-size: cover;
        opacity: 0.3;
    }

    .hero-content {
        position: relative;
        z-index: 1;
    }

    .facility-name {
        font-size: 3rem;
        font-weight: 800;
        margin-bottom: 15px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        animation: fadeInUp 0.6s ease;
    }

    .facility-location {
        font-size: 1.3rem;
        opacity: 0.95;
        margin-bottom: 20px;
        animation: fadeInUp 0.8s ease;
    }

    .price-badge {
        display: inline-block;
        background: rgba(255,255,255,0.2);
        backdrop-filter: blur(10px);
        padding: 15px 30px;
        border-radius: 50px;
        font-size: 1.5rem;
        font-weight: 700;
        animation: fadeInUp 1s ease;
        border: 2px solid rgba(255,255,255,0.3);
    }

    .book-now-btn {
        background: white;
        color: #10b981;
        font-weight: 700;
        padding: 15px 40px;
        border-radius: 50px;
        border: none;
        font-size: 1.2rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        transition: all 0.3s ease;
        animation: pulse 2s infinite;
    }

    .book-now-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.3);
        background: #f8f9fa;
        color: #047857;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .content-card {
        background: white;
        border-radius: 20px;
        padding: 35px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        margin-bottom: 30px;
        transition: all 0.3s ease;
        border: 1px solid rgba(0,0,0,0.05);
    }

    .content-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 50px rgba(0,0,0,0.12);
    }

    .section-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .section-title i {
        color: #10b981;
        font-size: 2rem;
    }

    .media-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 20px;
    }

    .media-item {
        position: relative;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .media-item:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .media-item img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        display: block;
    }

    .media-item video {
        width: 100%;
        height: 250px;
        object-fit: cover;
        display: block;
    }

    .video-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: rgba(102, 126, 234, 0.9);
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        pointer-events: none;
    }

    .video-overlay i {
        color: white;
        font-size: 24px;
        margin-left: 3px;
    }

    .lightbox {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.95);
        z-index: 9999;
        align-items: center;
        justify-content: center;
    }

    .lightbox.active {
        display: flex;
    }

    .lightbox-content {
        max-width: 90%;
        max-height: 90%;
        position: relative;
    }

    .lightbox-content img,
    .lightbox-content video {
        max-width: 100%;
        max-height: 90vh;
        border-radius: 10px;
    }

    .lightbox-close {
        position: absolute;
        top: 20px;
        right: 20px;
        color: white;
        font-size: 40px;
        cursor: pointer;
        z-index: 10000;
        background: rgba(0,0,0,0.5);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .description-text {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #4a5568;
    }

    .pricing-card {
        background: linear-gradient(135deg, #f6f8fb 0%, #ffffff 100%);
        border: 2px solid #e2e8f0;
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 15px;
        transition: all 0.3s ease;
    }

    .pricing-card:hover {
        border-color: #10b981;
        transform: translateX(5px);
    }

    .pricing-days {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-bottom: 12px;
    }

    .day-badge {
        background: linear-gradient(135deg, #10b981 0%, #047857 100%);
        color: white;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .time-badge {
        background: #e2e8f0;
        color: #2d3748;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .price-amount {
        font-size: 2rem;
        font-weight: 800;
        background: linear-gradient(135deg, #10b981 0%, #047857 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .availability-sidebar {
        position: sticky;
        top: 20px;
    }

    .availability-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.08);
        border: 1px solid rgba(0,0,0,0.05);
    }

    .slot-item {
        padding: 15px;
        border-radius: 12px;
        margin-bottom: 10px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .slot-item.available {
        background: #f0fdf4;
        border-color: #86efac;
    }

    .slot-item.available:hover {
        background: #dcfce7;
        transform: translateX(5px);
    }

    .slot-item.booked {
        background: #fef2f2;
        border-color: #fca5a5;
        opacity: 0.7;
    }

    .slot-time {
        font-weight: 600;
        color: #2d3748;
        font-size: 0.95rem;
    }

    .slot-price {
        color: #10b981;
        font-weight: 700;
        font-size: 0.9rem;
    }

    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 700;
    }

    .status-available {
        background: #86efac;
        color: #166534;
    }

    .status-booked {
        background: #fca5a5;
        color: #991b1b;
    }

    .info-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #10b981 0%, #047857 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
        margin-bottom: 15px;
    }

    .feature-list {
        list-style: none;
        padding: 0;
    }

    .feature-list li {
        padding: 12px 0;
        border-bottom: 1px solid #e2e8f0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .feature-list li:last-child {
        border-bottom: none;
    }

    .feature-list i {
        color: #10b981;
        font-size: 1.2rem;
    }
</style>

<!-- Hero Section -->
<div class="hero-section">
    <div class="container hero-content">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="facility-name">
                    <i class="bi bi-building"></i> @Model.Indoor.Name
                </h1>
                <p class="facility-location">
                    <i class="bi bi-geo-alt-fill"></i> @Model.Indoor.Location
                </p>
                <div class="price-badge">
                    <i class="bi bi-tag-fill"></i> Starting from PKR @Model.Indoor.PricePerHour.ToString("N0")/hour
                </div>
            </div>
            <div class="col-lg-4 text-lg-end mt-4 mt-lg-0">
                @if (!Model.IsAdmin)
                {
                    <a asp-page="/Bookings/Create" asp-route-indoorId="@Model.Indoor.Id" class="book-now-btn">
                        <i class="bi bi-calendar-check-fill"></i> Book Now
                    </a>
                }
                else
                {
                    <a asp-page="Edit" asp-route-id="@Model.Indoor.Id" class="book-now-btn">
                        <i class="bi bi-pencil-fill"></i> Edit Indoor
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">

    <div class="row">
        <div class="col-lg-8">
            @{
                var mediaUrls = Model.Indoor.MediaUrls ?? Array.Empty<string>();
                
                // Helper function to check file extension (handles URLs with query parameters)
                bool IsImageUrl(string url)
                {
                    if (string.IsNullOrEmpty(url)) return false;
                    var path = url.Split('?')[0]; // Remove query parameters
                    return path.EndsWith(".jpg", StringComparison.OrdinalIgnoreCase) || 
                           path.EndsWith(".jpeg", StringComparison.OrdinalIgnoreCase) || 
                           path.EndsWith(".png", StringComparison.OrdinalIgnoreCase) || 
                           path.EndsWith(".gif", StringComparison.OrdinalIgnoreCase);
                }
                
                bool IsVideoUrl(string url)
                {
                    if (string.IsNullOrEmpty(url)) return false;
                    var path = url.Split('?')[0]; // Remove query parameters
                    return path.EndsWith(".mp4", StringComparison.OrdinalIgnoreCase) || 
                           path.EndsWith(".webm", StringComparison.OrdinalIgnoreCase) || 
                           path.EndsWith(".mov", StringComparison.OrdinalIgnoreCase);
                }
                
                var images = mediaUrls.Where(url => IsImageUrl(url)).ToArray();
                var videos = mediaUrls.Where(url => IsVideoUrl(url)).ToArray();
            }

            @* Images Gallery *@
            @if (images.Length > 0)
            {
                <div class="content-card">
                    <h2 class="section-title">
                        <i class="bi bi-images"></i>
                        <span>Photo Gallery</span>
                    </h2>
                    <div class="media-gallery">
                        @foreach (var image in images)
                        {
                            <div class="media-item" onclick="openLightbox('@image', 'image')">
                                <img src="@image" alt="@Model.Indoor.Name" />
                            </div>
                        }
                    </div>
                </div>
            }
            else if (Model.IsAdmin)
            {
                <div class="content-card">
                    <h2 class="section-title">
                        <i class="bi bi-images"></i>
                        <span>Photo Gallery</span>
                    </h2>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> 
                        No images uploaded yet. <a asp-page="Edit" asp-route-id="@Model.Indoor.Id">Upload images</a> to showcase your facility.
                    </div>
                </div>
            }

            @* Videos Gallery *@
            @if (videos.Length > 0)
            {
                <div class="content-card">
                    <h2 class="section-title">
                        <i class="bi bi-play-circle-fill"></i>
                        <span>Video Tours</span>
                    </h2>
                    <div class="media-gallery">
                        @foreach (var video in videos)
                        {
                            <div class="media-item" onclick="openLightbox('@video', 'video')">
                                <video src="@video"></video>
                                <div class="video-overlay">
                                    <i class="bi bi-play-fill"></i>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else if (Model.IsAdmin)
            {
                <div class="content-card">
                    <h2 class="section-title">
                        <i class="bi bi-play-circle-fill"></i>
                        <span>Video Tours</span>
                    </h2>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> 
                        No videos uploaded yet. <a asp-page="Edit" asp-route-id="@Model.Indoor.Id">Upload videos</a> to give customers a virtual tour.
                    </div>
                </div>
            }

            @* Description *@
            <div class="content-card">
                <h2 class="section-title">
                    <i class="bi bi-card-text"></i>
                    <span>About This Facility</span>
                </h2>
                <p class="description-text">@Model.Indoor.Description</p>
            </div>

            @* Pricing *@
            <div class="content-card">
                <h2 class="section-title">
                    <i class="bi bi-currency-exchange"></i>
                    <span>Pricing Details</span>
                </h2>
                
                @if (Model.Indoor.PricingRules != null && Model.Indoor.PricingRules.Count > 0)
                {
                    <p class="text-muted mb-4">
                        <i class="bi bi-info-circle"></i> Prices vary by day and time. Check the rates below:
                    </p>
                    
                    @foreach (var rule in Model.Indoor.PricingRules)
                    {
                        // Skip old format rules
                        if (rule.SlotIds == null || rule.SlotIds.Length == 0)
                        {
                            continue;
                        }
                        
                        var sortedSlots = rule.SlotIds.OrderBy(s => s).ToArray();
                        var firstSlot = sortedSlots[0];
                        var lastSlot = sortedSlots[sortedSlots.Length - 1];
                        
                        var startHour = firstSlot % 12;
                        if (startHour == 0) startHour = 12;
                        var startPeriod = firstSlot >= 12 ? "PM" : "AM";
                        var startTime = $"{startHour}:00 {startPeriod}";
                        
                        var endHourValue = (lastSlot + 1) % 24;
                        var endHour = endHourValue % 12;
                        if (endHour == 0) endHour = 12;
                        var endPeriod = endHourValue >= 12 ? "PM" : "AM";
                        var endTime = $"{endHour}:00 {endPeriod}";
                        
                        <div class="pricing-card">
                            <div class="pricing-days">
                                @foreach (var day in rule.ApplicableDays)
                                {
                                    <span class="day-badge">@day.ToString().Substring(0, 3)</span>
                                }
                                <span class="time-badge">
                                    <i class="bi bi-clock"></i> @startTime - @endTime
                                </span>
                            </div>
                            <div class="price-amount">
                                PKR @rule.Price.ToString("N0") <small style="font-size: 0.5em; opacity: 0.7;">per hour</small>
                            </div>
                        </div>
                    }
                    
                    <div class="alert alert-info mt-3">
                        <i class="bi bi-info-circle-fill"></i> 
                        <strong>Default Rate:</strong> PKR @Model.Indoor.PricePerHour.ToString("N0")/hour for times not listed above
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <div class="info-icon mx-auto">
                            <i class="bi bi-tag-fill"></i>
                        </div>
                        <div class="price-amount">PKR @Model.Indoor.PricePerHour.ToString("N0")</div>
                        <p class="text-muted">per hour</p>
                    </div>
                }

                @if (!Model.IsAdmin)
                {
                    <div class="text-center mt-4">
                        <a asp-page="/Bookings/Create" asp-route-indoorId="@Model.Indoor.Id" class="book-now-btn">
                            <i class="bi bi-calendar-check-fill"></i> Book This Indoor Now
                        </a>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-4">
            <div class="availability-sidebar">
                <div class="availability-card">
                    <h2 class="section-title">
                        <i class="bi bi-calendar-check"></i>
                        <span>Check Availability</span>
                    </h2>
                    
                    <form method="get" class="mb-4">
                        <input type="hidden" name="id" value="@Model.Indoor.Id" />
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="bi bi-calendar-event"></i> Select Date
                            </label>
                            <input type="date" name="selectedDate" class="form-control form-control-lg" 
                                   value="@Model.SelectedDate.ToString("yyyy-MM-dd")" 
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100 btn-lg">
                            <i class="bi bi-search"></i> Check Slots
                        </button>
                    </form>

                    <div class="mb-3">
                        <h6 class="fw-bold text-muted mb-3">
                            <i class="bi bi-clock-history"></i> @Model.SelectedDate.ToString("MMMM dd, yyyy")
                        </h6>
                        
                        <div style="max-height: 600px; overflow-y: auto;">
                            @foreach (var timeSlot in Model.AllTimeSlots)
                            {
                                var isBooked = Model.BookedSlotIds.Contains(timeSlot.Id);
                                var price = Model.SlotPrices.GetValueOrDefault(timeSlot.Id, Model.Indoor.PricePerHour);
                                
                                <div class="slot-item @(isBooked ? "booked" : "available")">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <div class="slot-time">
                                                <i class="bi bi-clock"></i> @timeSlot.DisplayName
                                            </div>
                                            <div class="slot-price">PKR @price.ToString("N0")</div>
                                        </div>
                                        @if (isBooked)
                                        {
                                            <span class="status-badge status-booked">
                                                <i class="bi bi-x-circle-fill"></i> Booked
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="status-badge status-available">
                                                <i class="bi bi-check-circle-fill"></i> Free
                                            </span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    @if (!Model.IsAdmin)
                    {
                        <div class="d-grid gap-2 mt-4">
                            <a asp-page="/Bookings/Create" asp-route-indoorId="@Model.Indoor.Id" asp-route-date="@Model.SelectedDate.ToString("yyyy-MM-dd")" 
                               class="btn btn-success btn-lg">
                                <i class="bi bi-calendar-plus-fill"></i> Book Available Slots
                            </a>
                        </div>
                    }
                </div>

                @if (Model.IsAdmin)
                {
                    <div class="availability-card mt-3">
                        <h6 class="fw-bold mb-3">
                            <i class="bi bi-gear-fill"></i> Admin Actions
                        </h6>
                        <div class="d-grid gap-2">
                            <a asp-page="Edit" asp-route-id="@Model.Indoor.Id" class="btn btn-outline-primary">
                                <i class="bi bi-pencil-fill"></i> Edit Details
                            </a>
                            <a asp-page="Pricing" asp-route-id="@Model.Indoor.Id" class="btn btn-outline-success">
                                <i class="bi bi-tag-fill"></i> Manage Pricing
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="mt-5 text-center">
        <a asp-page="Index" class="btn btn-outline-secondary btn-lg px-5">
            <i class="bi bi-arrow-left"></i> Back to Browse
        </a>
    </div>
</div>

