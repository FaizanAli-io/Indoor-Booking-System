@page "{id}"
@model IndoorBookingSystem.Pages.Indoors.PricingModel
@{
    ViewData["Title"] = "Manage Pricing";
    
    string FormatTime12Hour(TimeSpan time)
    {
        var hours = time.Hours;
        var minutes = time.Minutes;
        var period = hours >= 12 ? "PM" : "AM";
        hours = hours % 12;
        if (hours == 0) hours = 12;
        return $"{hours}:{minutes:D2} {period}";
    }
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Manage Pricing</h2>
            <p class="text-muted mb-0">@Model.Indoor.Name</p>
        </div>
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addRuleModal">
            <i class="bi bi-plus-circle"></i> Add Pricing Rule
        </button>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Html.Raw(ViewData.ModelState.Values.SelectMany(v => v.Errors).FirstOrDefault()?.ErrorMessage)
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-tag"></i> Default Price</h5>
                </div>
                <div class="card-body text-center">
                    <h2 class="text-primary mb-2">PKR @Model.Indoor.PricePerHour.ToString("N0")</h2>
                    <p class="text-muted mb-0">per hour</p>
                    <small class="text-muted">Applies when no specific rule matches</small>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-calendar-range"></i> Pricing Rules (@(Model.Indoor.PricingRules?.Count ?? 0))</h5>
                </div>
                <div class="card-body">
                    @if (Model.Indoor.PricingRules == null || Model.Indoor.PricingRules.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                            <p class="text-muted mt-3">No custom pricing rules yet.</p>
                            <p class="text-muted">Click "Add Pricing Rule" to set different prices for specific days and times.</p>
                        </div>
                    }
                    else
                    {
                        <div class="list-group">
                            @for (int i = 0; i < Model.Indoor.PricingRules.Count; i++)
                            {
                                var rule = Model.Indoor.PricingRules[i];
                                var days = string.Join(", ", rule.ApplicableDays.Select(d => d.ToString().Substring(0, 3)));
                                var ruleNumber = i + 1;
                                
                                // Get slot range display (with null check for old data)
                                if (rule.SlotIds == null || rule.SlotIds.Length == 0)
                                {
                                    continue; // Skip old format rules
                                }
                                
                                var sortedSlots = rule.SlotIds.OrderBy(s => s).ToArray();
                                var firstSlot = sortedSlots[0];
                                var lastSlot = sortedSlots[sortedSlots.Length - 1];
                                var startDisplay = FormatTime12Hour(TimeSpan.FromHours(firstSlot));
                                var endDisplay = FormatTime12Hour(TimeSpan.FromHours((lastSlot + 1) % 24));
                                var slotCount = rule.SlotIds.Length;
                                
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <div class="d-flex align-items-center mb-2">
                                                <span class="badge bg-dark me-2">Rule #@ruleNumber</span>
                                                <span class="badge bg-info me-2">@days</span>
                                                <span class="badge bg-secondary">@startDisplay - @endDisplay (@slotCount slots)</span>
                                            </div>
                                            <h5 class="mb-0 text-success">PKR @rule.Price.ToString("N0") <small class="text-muted">/ hour</small></h5>
                                        </div>
                                        <form method="post" asp-page-handler="DeleteRule" class="ms-3">
                                            <input type="hidden" name="ruleIndex" value="@i" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete Rule #@ruleNumber?')">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-page="Edit" asp-route-id="@Model.Indoor.Id" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Edit Indoor
        </a>
        <a asp-page="Index" class="btn btn-outline-secondary">
            <i class="bi bi-list"></i> Back to List
        </a>
    </div>
</div>

<!-- Add Pricing Rule Modal -->
<div class="modal fade" id="addRuleModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <form method="post" asp-page-handler="AddRule" id="pricingRuleForm">
                <div class="modal-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                    <h5 class="modal-title"><i class="bi bi-plus-circle"></i> Create Pricing Rule</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" style="max-height: 70vh; overflow-y: auto;">
                    <!-- Step 1: Select Days -->
                    <div class="mb-4">
                        <h6 class="text-primary mb-3">
                            <i class="bi bi-calendar-week"></i> Step 1: Select Days
                        </h6>
                        <div class="row g-2">
                            @foreach (DayOfWeek day in Enum.GetValues(typeof(DayOfWeek)))
                            {
                                <div class="col-6 col-md-4 col-lg-3">
                                    <input type="checkbox" class="btn-check" name="selectedDays" value="@day" id="modal_day_@day">
                                    <label class="btn btn-outline-primary w-100 day-selector" for="modal_day_@day">
                                        <i class="bi bi-calendar-check"></i><br/>
                                        <strong>@day</strong>
                                    </label>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Step 2: Select Time Slots -->
                    <div class="mb-4">
                        <h6 class="text-primary mb-3">
                            <i class="bi bi-clock-history"></i> Step 2: Select Time Range
                        </h6>
                        <p class="text-muted small mb-3">Click on time slots to select a range. Click and drag to select multiple consecutive slots.</p>
                        
                        <div class="row g-2" id="timeSlotSelector">
                            @for (int hour = 0; hour < 24; hour++)
                            {
                                var nextHour = (hour + 1) % 24;
                                var displayHour = hour % 12;
                                if (displayHour == 0) displayHour = 12;
                                var period = hour >= 12 ? "PM" : "AM";
                                var displayNextHour = nextHour % 12;
                                if (displayNextHour == 0) displayNextHour = 12;
                                var nextPeriod = nextHour >= 12 ? "PM" : "AM";
                                
                                <div class="col-6 col-md-4 col-lg-3">
                                    <div class="time-slot-selector" 
                                         data-hour="@hour" 
                                         data-slot="@hour:@nextHour"
                                         onclick="toggleTimeSlot(this)">
                                        <div class="slot-check">âœ“</div>
                                        <div class="slot-time">
                                            <strong>@displayHour:00 @period</strong>
                                            <small class="d-block text-muted">to @displayNextHour:00 @nextPeriod</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <!-- Hidden inputs for selected slot IDs -->
                        <div id="selectedSlotsContainer"></div>
                        
                        <div class="alert alert-info mt-3" id="selectedRangeDisplay" style="display: none;">
                            <i class="bi bi-info-circle"></i> <strong>Selected Range:</strong> 
                            <span id="rangeText"></span>
                        </div>
                    </div>

                    <!-- Step 3: Set Price -->
                    <div class="mb-3">
                        <h6 class="text-primary mb-3">
                            <i class="bi bi-currency-exchange"></i> Step 3: Set Price
                        </h6>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text">PKR</span>
                            <input type="number" name="price" id="priceInput" class="form-control" step="1" min="0" placeholder="4500" required />
                            <span class="input-group-text">per hour</span>
                        </div>
                    </div>

                    <!-- Summary -->
                    <div class="alert alert-success" id="ruleSummary" style="display: none;">
                        <h6><i class="bi bi-check-circle"></i> Rule Summary</h6>
                        <div id="summaryContent"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-success btn-lg" id="submitRuleBtn" disabled>
                        <i class="bi bi-check-circle"></i> Create Pricing Rule
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .day-selector {
        padding: 15px 10px;
        transition: all 0.3s ease;
    }
    
    .day-selector:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }
    
    .btn-check:checked + .day-selector {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: #667eea;
    }
    
    .time-slot-selector {
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        padding: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        background: white;
        position: relative;
        text-align: center;
    }
    
    .time-slot-selector:hover {
        border-color: #667eea;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.2);
    }
    
    .time-slot-selector.selected {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-color: #667eea;
    }
    
    .time-slot-selector.selected .text-muted {
        color: rgba(255,255,255,0.8) !important;
    }
    
    .slot-check {
        position: absolute;
        top: 5px;
        right: 5px;
        width: 20px;
        height: 20px;
        background: white;
        border-radius: 50%;
        display: none;
        align-items: center;
        justify-content: center;
        color: #667eea;
        font-weight: bold;
        font-size: 12px;
    }
    
    .time-slot-selector.selected .slot-check {
        display: flex;
    }
</style>

<script>
    let selectedSlots = [];
    
    function toggleTimeSlot(element) {
        const hour = parseInt(element.getAttribute('data-hour'));
        
        if (element.classList.contains('selected')) {
            element.classList.remove('selected');
            selectedSlots = selectedSlots.filter(h => h !== hour);
        } else {
            element.classList.add('selected');
            selectedSlots.push(hour);
        }
        
        selectedSlots.sort((a, b) => a - b);
        updateTimeRange();
    }
    
    function updateTimeRange() {
        if (selectedSlots.length === 0) {
            document.getElementById('selectedRangeDisplay').style.display = 'none';
            document.getElementById('submitRuleBtn').disabled = true;
            document.getElementById('ruleSummary').style.display = 'none';
            return;
        }
        
        const startHour = Math.min(...selectedSlots);
        const endHour = (Math.max(...selectedSlots) + 1) % 24;
        
        // Update hidden inputs with slot IDs
        const container = document.getElementById('selectedSlotsContainer');
        container.innerHTML = '';
        selectedSlots.forEach(slotId => {
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'selectedSlots';
            input.value = slotId;
            container.appendChild(input);
        });
        
        const startDisplay = formatHour(startHour);
        const endDisplay = formatHour(endHour);
        
        document.getElementById('rangeText').textContent = `${startDisplay} to ${endDisplay} (${selectedSlots.length} slots)`;
        document.getElementById('selectedRangeDisplay').style.display = 'block';
        
        updateSummary();
    }
    
    function formatHour(hour) {
        const displayHour = hour % 12 || 12;
        const period = hour >= 12 ? 'PM' : 'AM';
        return `${displayHour}:00 ${period}`;
    }
    
    function updateSummary() {
        const selectedDays = Array.from(document.querySelectorAll('input[name="selectedDays"]:checked'))
            .map(cb => cb.nextElementSibling.textContent.trim());
        const price = document.getElementById('priceInput').value;
        const rangeText = document.getElementById('rangeText').textContent;
        
        if (selectedDays.length > 0 && selectedSlots.length > 0 && price) {
            const summary = `
                <strong>Days:</strong> ${selectedDays.join(', ')}<br/>
                <strong>Time:</strong> ${rangeText}<br/>
                <strong>Price:</strong> PKR ${parseFloat(price).toLocaleString('en-PK')} per hour
            `;
            document.getElementById('summaryContent').innerHTML = summary;
            document.getElementById('ruleSummary').style.display = 'block';
            document.getElementById('submitRuleBtn').disabled = false;
        } else {
            document.getElementById('ruleSummary').style.display = 'none';
            document.getElementById('submitRuleBtn').disabled = true;
        }
    }
    
    // Update summary when days or price changes
    document.querySelectorAll('input[name="selectedDays"]').forEach(cb => {
        cb.addEventListener('change', updateSummary);
    });
    
    document.getElementById('priceInput')?.addEventListener('input', updateSummary);
    
    // Reset form when modal closes
    document.getElementById('addRuleModal')?.addEventListener('hidden.bs.modal', function() {
        selectedSlots = [];
        document.querySelectorAll('.time-slot-selector.selected').forEach(el => el.classList.remove('selected'));
        document.querySelectorAll('input[name="selectedDays"]:checked').forEach(cb => cb.checked = false);
        document.getElementById('priceInput').value = '';
        document.getElementById('selectedRangeDisplay').style.display = 'none';
        document.getElementById('ruleSummary').style.display = 'none';
    });
</script>

<style>
    .list-group-item {
        border-left: 4px solid #28a745;
        transition: all 0.3s;
    }
    .list-group-item:hover {
        background-color: #f8f9fa;
        border-left-color: #20c997;
    }
</style>
