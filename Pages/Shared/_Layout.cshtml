<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IndoorBookingSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IndoorBookingSystem.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm mb-4">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-page="/Index">IndoorBookingSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Bookings/Index">Bookings</a>
                        </li>

                        @* Show login/signup only if user is NOT logged in *@
                        @{
                            var userRole = Context.Session.GetString("UserRole");
                            var userName = Context.Session.GetString("UserName");
                        }

                        @if (string.IsNullOrEmpty(userRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Auth/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white ms-2" asp-area="" asp-page="/Auth/Signup">Sign Up</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <span class="nav-link fw-bold">Hello, @userName (@userRole)</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-danger text-white ms-2" asp-page="/Auth/Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white text-center text-muted py-3 border-top mt-auto">
        <div class="container">
            &copy; 2025 IndoorBookingSystem - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
