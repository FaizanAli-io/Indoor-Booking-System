<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Game On! Indoor Sports</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/sports-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body>

    <!-- Sports Theme Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-sports">
            <div class="container">
                <a class="navbar-brand-sports" asp-area="" asp-page="/Index">
                    <i class="bi bi-trophy-fill"></i> Game On!
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center gap-2">
                        @{
                            var userRole = Context.Session.GetString("UserRole");
                            var userName = Context.Session.GetString("UserName");
                        }

                        <li class="nav-item">
                            <a class="nav-link-sports" asp-area="" asp-page="/Index">
                                <i class="bi bi-house-door-fill"></i> Home
                            </a>
                        </li>

                        @if (!string.IsNullOrEmpty(userRole))
                        {
                            @if (userRole == "ADMIN")
                            {
                                <li class="nav-item">
                                    <a class="nav-link-sports" asp-page="/Indoors/Index">
                                        <i class="bi bi-building"></i> My Facilities
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link-sports" asp-page="/Bookings/Index">
                                        <i class="bi bi-calendar-check"></i> Bookings
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link-sports" asp-page="/Indoors/Index">
                                        <i class="bi bi-search"></i> Browse Facilities
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link-sports" asp-page="/Bookings/Index">
                                        <i class="bi bi-calendar-event"></i> My Bookings
                                    </a>
                                </li>
                            }
                        }

                        @if (string.IsNullOrEmpty(userRole))
                        {
                            <li class="nav-item">
                                <a class="nav-link-sports" asp-area="" asp-page="/Auth/Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn-primary btn-sm" asp-area="" asp-page="/Auth/Signup">
                                    <i class="bi bi-person-plus-fill"></i> Sign Up
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <span class="nav-link-sports">
                                    <i class="bi bi-person-circle"></i> @userName
                                    <span class="badge-sport ms-1">@userRole</span>
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="btn-secondary btn-sm" asp-page="/Auth/Logout">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main class="container my-4">
        @RenderBody()
    </main>

    <!-- Sports Theme Footer -->
    <footer style="background: white; border-top: 1px solid var(--color-gray-200); margin-top: 80px;">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 style="color: var(--color-primary); font-weight: 700;">
                        <i class="bi bi-trophy-fill"></i> Game On!
                    </h5>
                    <p style="color: var(--color-gray-600); font-size: 14px;">
                        Your premier platform for booking indoor sports facilities. Find, book, and play!
                    </p>
                </div>
                <div class="col-md-4 mb-4">
                    <h6 style="font-weight: 600; margin-bottom: 16px;">Quick Links</h6>
                    <ul style="list-style: none; padding: 0;">
                        <li style="margin-bottom: 8px;">
                            <a asp-page="/Index" style="color: var(--color-gray-600); text-decoration: none; font-size: 14px;">Home</a>
                        </li>
                        <li style="margin-bottom: 8px;">
                            <a asp-page="/Indoors/Index" style="color: var(--color-gray-600); text-decoration: none; font-size: 14px;">Browse Facilities</a>
                        </li>
                        <li style="margin-bottom: 8px;">
                            <a asp-page="/Privacy" style="color: var(--color-gray-600); text-decoration: none; font-size: 14px;">Privacy Policy</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4 mb-4">
                    <h6 style="font-weight: 600; margin-bottom: 16px;">Contact</h6>
                    <p style="color: var(--color-gray-600); font-size: 14px; margin-bottom: 8px;">
                        <i class="bi bi-envelope"></i> support@gameon.com
                    </p>
                    <p style="color: var(--color-gray-600); font-size: 14px;">
                        <i class="bi bi-telephone"></i> +92 300 1234567
                    </p>
                </div>
            </div>
            <hr style="border-color: var(--color-gray-200); margin: 24px 0;">
            <div class="text-center" style="color: var(--color-gray-600); font-size: 14px;">
                &copy; 2025 Game On! Indoor Sports Booking. All rights reserved.
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
