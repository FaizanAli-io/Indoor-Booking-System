@page
@using IndoorBookingSystem.Models
@model IndoorBookingSystem.Pages.Bookings.IndexModel
@{
    ViewData["Title"] = Model.UserRole == "ADMIN" ? "Manage Bookings" : "My Bookings";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (Model.Bookings.Count == 0)
    {
        <div class="alert alert-info mt-4">
            @if (Model.UserRole == "ADMIN")
            {
                <p>No bookings yet for your indoors.</p>
            }
            else
            {
                <p>You haven't made any bookings yet. <a asp-page="/Indoors/Index">Browse indoors</a> to make a booking.</p>
            }
        </div>
    }
    else
    {
        <div class="table-responsive mt-4">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Indoor</th>
                        @if (Model.UserRole == "ADMIN")
                        {
                            <th>Customer</th>
                        }
                        <th>Date</th>
                        <th>Time Slot</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model.Bookings)
                    {
                        var indoor = Model.IndoorDetails.GetValueOrDefault(booking.IndoorId);
                        var statusClass = booking.Status switch
                        {
                            BookingStatus.Confirmed => "success",
                            BookingStatus.Pending => "warning",
                            BookingStatus.Rejected => "danger",
                            _ => "secondary"
                        };

                        <tr>
                            <td>
                                @if (indoor != null)
                                {
                                    <strong>@indoor.Name</strong><br />
                                    <small class="text-muted">@indoor.Location</small>
                                }
                                else
                                {
                                    <span class="text-muted">Indoor not found</span>
                                }
                            </td>
                            @if (Model.UserRole == "ADMIN")
                            {
                                var customer = Model.CustomerDetails.GetValueOrDefault(booking.CustomerId);
                                <td>
                                    @if (customer != null)
                                    {
                                        @customer.FullName<br />
                                        <small class="text-muted">@customer.Email</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Unknown</span>
                                    }
                                </td>
                            }
                            <td>@booking.BookingDate.ToString("MMM dd, yyyy")</td>
                            <td>@TimeSlot.GetSlotById(booking.SlotId).DisplayName</td>
                            <td><strong>PKR @booking.Price.ToString("N0")</strong></td>
                            <td><span class="badge bg-@statusClass">@booking.Status</span></td>
                            <td>
                                @if (Model.UserRole == "ADMIN" && booking.Status == BookingStatus.Pending)
                                {
                                    <form method="post" class="d-inline">
                                        <button type="submit" asp-page-handler="Confirm" asp-route-bookingId="@booking.Id" 
                                                class="btn btn-sm btn-success" onclick="return confirm('Confirm this booking?')">
                                            Confirm
                                        </button>
                                    </form>
                                    <form method="post" class="d-inline">
                                        <button type="submit" asp-page-handler="Reject" asp-route-bookingId="@booking.Id" 
                                                class="btn btn-sm btn-danger" onclick="return confirm('Reject this booking?')">
                                            Reject
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
