@page
@model IndoorBookingSystem.Pages.Bookings.DetailsModel

<h2>Booking Details</h2>

<div class="card mb-3">
    <div class="card-header">
        <h3>@Model.Booking.Title</h3>
    </div>
    <div class="card-body">
        <p><strong>Description:</strong> @Model.Booking.Description</p>
        <p><strong>Location:</strong> @Model.Booking.Location</p>
        <p><strong>Price:</strong> @Model.Booking.Price.ToString("C")</p>
        <p><strong>Duration:</strong> @Model.Booking.DurationHours hours</p>
        <p><strong>Created At:</strong> @Model.Booking.CreatedAt.ToString("g")</p>

        @if (Model.Booking.MediaUrls?.Length > 0)
        {
            <div class="mt-3">
                <h5>Media:</h5>
                <div class="row">
                    @foreach (var url in Model.Booking.MediaUrls)
                    {
                        <div class="col-md-4 mb-2">
                            <img src="@url" class="img-fluid rounded" alt="Booking Media" />
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

<a asp-page="Index" class="btn btn-secondary">Back to Bookings</a>
