@page
@model IndoorBookingSystem.Pages.Bookings.EditModel

<h2>Edit Booking</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Booking.Id" />

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Booking.Title" class="form-control" />
        <span asp-validation-for="Booking.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="Booking.Description" class="form-control"></textarea>
        <span asp-validation-for="Booking.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Media URLs (comma-separated)</label>
        <input asp-for="Booking.MediaUrls" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Price</label>
        <input asp-for="Booking.Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Booking.Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Duration (hours)</label>
        <input asp-for="Booking.DurationHours" class="form-control" type="number" />
        <span asp-validation-for="Booking.DurationHours" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Location</label>
        <input asp-for="Booking.Location" class="form-control" />
        <span asp-validation-for="Booking.Location" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-warning">Update Booking</button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
